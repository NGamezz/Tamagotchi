<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Tamagotchi="clr-namespace:Tamagotchi"
             x:Class="Tamagotchi.HydrationPage"
             Title="HydrationPage">

    <VerticalStackLayout Spacing="40"
                         VerticalOptions="Center"
                         Padding="20.0">
        <Label
            FontSize="Header"
            Text="Hydration Page"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            />

        <Label 
            FontSize="Body"
            Text="You can make sure your Tamagotchi hydrates here."
            HorizontalOptions="Center"
            VerticalOptions="Start"
            />

        <Label
            Text="{Binding ThirstText, Mode=OneWay}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            />

        <Button 
            x:Name="Button"
            Text="Hydrate your Creature."
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Pressed="Hydrate"
            />

        <Tamagotchi:ContentViewExample MyAmazing="agdywgdyogaisd" VerticalOptions="End" HorizontalOptions="CenterAndExpand"/>

    </VerticalStackLayout>
</ContentPage>