<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi.ContentViewExample">

    <FlexLayout Wrap="Wrap">

        <Button
                x:Name="MainPageButton"
            Text="Main Page."
            VerticalOptions="End"
            Pressed="MainPage"
            />

        <Button
                x:Name="FoodPageButton"
            Text="Food Page."
            Pressed="FoodPage"
            VerticalOptions="End"
            />

        <Button
                x:Name="SleepPageButton"
            Text="Sleep Page."
            Pressed="SleepPage"
            VerticalOptions="End"
            />

        <Button
                x:Name="PlayTimePageButton"
            Text="Playtime Page."
            Pressed="PlayTimePage"
            VerticalOptions="End"
            />

        <Button
                x:Name="HydrationPageButton"
            Text="Hydration Page."
            Pressed="HydrationPage"
            VerticalOptions="End"
            />

    </FlexLayout>

</ContentView>
