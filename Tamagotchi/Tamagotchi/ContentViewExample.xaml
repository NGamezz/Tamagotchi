<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi.ContentViewExample">

        <FlexLayout Wrap="Wrap">

            <Button
            Text="Main Page."
            VerticalOptions="End"
            Pressed="MainPage"
            />

            <Button
            Text="Food Page."
            Pressed="NextPage"
            VerticalOptions="End"
            />

            <Button
            Text="Sleep Page."
            Pressed="SleepPage"
            VerticalOptions="End"
            />

            <Button
            Text="Playtime Page."
            Pressed="PlayTimePage"
            VerticalOptions="End"
            />

            <Button
            Text="Hydration Page."
            Pressed="HydrationPage"
            VerticalOptions="End"
            />

        </FlexLayout>

</ContentView>
